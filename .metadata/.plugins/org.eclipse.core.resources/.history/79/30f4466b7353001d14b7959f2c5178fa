package pruebaseclipse;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		Scanner teclado=new Scanner (System.in);
		//Introducir variables
		int num;
		int cont=-1;
		int suma=0;
		//Pedir numeros
		do {
			System.out.print ("Introduce un numero: ");
			num=teclado.nextInt();
			suma=num+suma;
			cont++;
		}
		while(num!=0);
		System.out.print("Se han escrito " + cont + " numeros y su suma total es " + suma);
	}

}
